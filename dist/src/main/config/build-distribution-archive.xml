<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/3.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/3.1.1 http://maven.apache.org/xsd/assembly-3.1.1.xsd">
    <id>dist</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/dist/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/dist</directory>
            <outputDirectory />
            <excludes>
                <exclude>bin/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>

        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>com.hazelcast.simulator:simulator</include>
                <include>junit:junit</include>
            </includes>
            <excludes>
                <exclude>com.hazelcast:hazelcast</exclude>
            </excludes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>drivers/driver-hazelcast</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>com.hazelcast.simulator:driver-hazelcast</include>
                <include>io.netty:netty-*</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>drivers/driver-ignite</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>com.hazelcast.simulator:driver-ignite</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>drivers/driver-infinispan</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>com.hazelcast.simulator:driver-infinispan</include>
                <include>io.netty:netty-*</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>drivers/driver-couchbase</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>com.hazelcast.simulator:driver-couchbase</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>drivers/driver-memcached</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>com.hazelcast.simulator:driver-memcached</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>drivers/driver-mongodb</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>com.hazelcast.simulator:driver-mongodb</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>drivers/driver-lettuce</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>com.hazelcast.simulator:driver-lettuce</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>drivers/driver-jedis</outputDirectory>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>com.hazelcast.simulator:driver-jedis</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
